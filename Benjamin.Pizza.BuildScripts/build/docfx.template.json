{
    "metadata": [{
        "src": [{
            "files": "@AssemblyFiles",
            "src": "$AssemblyFilesRelativeDir"
        }],
        "dest": "."
    }],
    "build": {
        "content": [{
            "files": ["*.yml", "index.md" ]
        }],
        "dest": "_site",
        "globalMetadata": {
            "_enableSearch": true,
            "_disableBreadcrumb": true,
            "_appTitle": "$Title"
        },
        "xrefService": [ "https://xref.docs.microsoft.com/query?uid={uid}" ]
    }
}
